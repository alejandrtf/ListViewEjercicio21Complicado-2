<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etTextoAniadirEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribir y pulsar botón Añadir" />

    <LinearLayout
        android:id="@+id/LinearBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAniadirEditar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="0.50"
            android:background="@drawable/fondo_personalizado"
            android:enabled="false"
            android:text="@string/aniadir" />

        <Button
            android:id="@+id/btCancelarEditar"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="@drawable/fondo_personalizado"
            android:text="@string/cancelar"
            android:layout_weight="0.50"
            android:visibility="invisible" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>